#include<stdio.h>
int main()
{
    int n,temp,sum=0,sum1=0;
    printf("enter the number");
    scanf("%d",&n);
    while(n!=0)
    {
        temp=n%10;
        n=n/10;
        if(temp%2==0)
        {
            sum=sum+temp;
        }
        else
        {
            sum1=sum1+temp;
        }
    }
    if(sum1<sum)
    {
        printf("%d",sum);
    }
    else
    {
        printf("%d",sum1);
    }
}
