#include <stdio.h>

int main()
{
 int i,j,count;
 for(i=1;i<=7;i++)
 {   
     for(j=1;j<=i;j++)
     { 
        printf("*");
     }
     int space=2*7-2*i;
     for(j=1;j<=space;j++)
     {
         printf(" ");
     }
      for(j=1;j<=i;j++)
     { 
        printf("*");
     }
     printf("\n");
     
     
     
 }
   for(i=7;i>=1;i--)
 {   
     for(j=1;j<=i;j++)
     { 
        printf("*");
     }
     int space=2*7-2*i;
     for(j=1;j<=space;j++)
     {
         printf(" ");
     }
      for(j=1;j<=i;j++)
     { 
        printf("*");
     }
     printf("\n");
     
     
     
 }
}
